---
// Card.astro
import type { CardProps } from '../types';

interface Props extends CardProps {}

const {
    header,
    referenceLink,
    referenceLinkText = 'Learn More' // default text if not provided
} = Astro.props;
---

<div class="relative w-full max-w-lg">
    <div class="bg-white rounded-lg shadow-lg p-6 border border-gray-200 hover:shadow-xl transition-shadow">
        <!-- Header -->
        <h2 class="text-xl font-bold text-gray-800 mb-4">
            {header}
        </h2>


        <!-- Solution -->
        <div class="mb-6">
            <p class="text-gray-600">
                <slot/>
            </p>
        </div>

        <!-- Reference Button -->
        <a
                href={referenceLink}
                class="inline-block px-6 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700 transition-colors duration-200 text-sm font-medium"
        >
            {referenceLinkText}
        </a>
    </div>
</div>